CompileFlags:
  Add:
    - -Wextra
    - -Wall
    - -isystem /usr/include
    - -isystem /usr/local/include
  CompilationDatabase: build
Diagnostics:
  ClangTidy:
    Add:
      - bugprone-*
      - cert-*
      - concurrency-*
      - cppcoreguidelines-*
      - google-*
      - hicpp-*
      - misc-*
      - modernize-*
      - openmp-*
      - performance-*
      - portability-*
      - readability-*
      - clang-analyzer-*
    Remove:
      - cppcoreguidelines-special-member-functions
      - hicpp-special-member-functions
      - performance-unnecessary-value-param
      - cppcoreguidelines-non-private-member-variables-in-classes
      - misc-non-private-member-variables-in-classes
    CheckOptions:
      readability-identifier-length.MinimumVariableNameLength: 2
      readability-identifier-length.MinimumParameterNameLength: 2
      readability-function-cognitive-complexity.Threshold: 25
      modernize-use-auto.MinTypeNameLength: 6
    FastCheckFilter: Loose
  UnusedIncludes: Strict
  Includes:
    MissingIncludes: Strict
Completion:
  ArgumentLists: Delimiters # Options : None, OpenDelimiter, Delimiters, FullPlaceholders
Index:
  Background: Build
Hover:
  ShowAKA: true
